{
  "name": "Java + Node + Angular + Android Dev Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    },
    "ghcr.io/nordcominc/devcontainer-features/android-sdk:1": {
      "androidHome": "/opt/android-sdk"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.java",
        "vscjava.vscode-java-debug",
        "vscjava.vscode-java-test",
        "vscjava.vscode-maven",
        "ms-azuretools.vscode-docker",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "angular.ng-template",
        "mathiasfrohlich.kotlin",
        "esafirm.kotlin-formatter"
      ]
    }
  },
  "postCreateCommand": "/bin/bash .devcontainer/setup-android.sh && npm install -g @angular/cli && ng version && mvn --version && java -version && node -v && npm -v",
  "remoteUser": "vscode",
  "forwardPorts": [8080, 4200, 3000],
  "mounts": [
    "source=${localWorkspaceFolder}/.m2,target=/home/vscode/.m2,type=bind,consistency=cached"
  ]
}
